<talnet type="request">
	<request type="USER" name="UPDATE_PASSWORD">
		<description>
			this requests updates a user password
		</description>
		<requestArguments>
			<requestArgument type="String" name="userToUpdate" key="username">the user name to update</requestArgument>
			<requestArgument type="String" name="newPass" key="newPassword">the new password (plain)</requestArgument>
		</requestArguments>
		<validation>
			<string target="{creds:username}" type="equals" errorid="6">
				<argument id="1">{userToUpdate}</argument>
			</string>
			<credentials type="isMasterApplication" errorid="13"></credentials>
		</validation>
		<performance>
			<sqlExecute query="UpdateUserPassword">
				<argument id="1" function="md5">{newPass}</argument>
				<argument id="2">{userToUpdate}</argument>
			</sqlExecute>
		</performance>
	</request>
</talnet>