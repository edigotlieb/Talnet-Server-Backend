<talnet type="request">
	<request type="APP" name="REMOVE_PERMISSION_GROUP_FOR_TABLE">
		<description>
			this requests removes a table permission
		</description>
		<requestArguments>
			<requestArgument type="String" name="appName" key="appName">The name of the application using the modified table</requestArgument>
			<requestArgument type="String" name="tableName" key="from">The modified table name</requestArgument>
			<requestArgument type="String" name="permissionGroup" key="permissionGroupName">The permission group name</requestArgument>
			<requestArgument type="PermissionType" name="permissionType" key="type">The permission type</requestArgument>
		</requestArguments>
		<validation>
			<existence type="AppByName" arg1="{appName}" errorid="1">
				<argument id="1">{appName}</argument>
			</existence>
			<credentials type="AppAdmin" errorid="6">
				<argument id="1">{appName}</argument>
			</credentials>
			<existence type="TableByName" errorid="12">
				<argument id="1">{appName}_{tableName}</argument>
			</existence>
			<existence type="PermissionGroupByName" errorid="11">
				<argument id="1">{permissionGroup}</argument>
			</existence>
			<string gate="not" target="{permissionGroup}" type="equals" errorid="23">
				<argument id="1">{appName}_{Const:APP_ADMIN_PERMISSION_GROUP_SUFFIX}</argument>
			</string>
		</validation>
		<performance>
			<sqlExecute query="DeleteSingleAppPermission">
				<argument id="1">{appName}_{tableName}</argument>
				<argument id="2">{permissionGroup}</argument>
				<argument id="3">{permissionType}</argument>
			</sqlExecute>
		</performance>
	</request>
</talnet>