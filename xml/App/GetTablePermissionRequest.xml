<talnet type="request">
	<request type="App" name="GET_TABLE_PERMISSIONS">
		<description>
			This request drops a dynamic table.
		</description>
		<requestArguments>
			<requestArgument type="String" name="appName" key="appName">The name of the application to delete</requestArgument>
			<requestArgument type="String" name="tableName" key="tableName">The name of the application to delete</requestArgument>
		</requestArguments>
		<validation>
			<existence type="AppByName" errorid="1">
				<argument id="1">{appName}</argument>
			</existence>
			<credentials type="AppAdmin" errorid="6">
				<argument id="1">{appName}</argument>
			</credentials>
			<existence type="TableByName" errorid="8">
				<argument id="1">{appName}_{tableName}</argument>
			</existence>
		</validation>
		<performance>
			<sqlExecute query="getTablePermissions">
				<argument id="1">{appName}_{tableName}</argument>
			</sqlExecute>
		</performance>
	</request>
</talnet>