<talnet type="request">
	<request type="APP" name="GET_TABLES">
		<description>
			This request returns a list of all tables of a given application
		</description>
		<requestArguments>
			<requestArgument type="String" name="appName" key="appName">The name of the application to return its tables</requestArgument>
		</requestArguments>
		<validation>
			<existence type="AppByName" errorid="1">
				<argument id="1">{appName}</argument>
			</existence>
			<credentials type="AppAdmin" errorid="6">
				<argument id="1">{appName}</argument>
			</credentials>
		</validation>
		<performance>
			<sqlExecute query="getAppTables" return="return">
				<argument id="1">{appName}</argument>
			</sqlExecute>
		</performance>
	</request>
</talnet>