<talnet type="request">
	<request type="APP" name="DROP_TABLE">
		<description>
			This request drops a dynamic table.
		</description>
		<requestArguments>
			<requestArgument type="String" name="appName" key="appName">The name of the application</requestArgument>
			<requestArgument type="String" name="tableName" key="tableName">The name of the table to drop</requestArgument>
		</requestArguments>
		<validation>
			<existence type="TableByName" errorid="8">
				<argument id="1">{appName}_{tableName}</argument>
			</existence>
			<credentials type="AppAdmin" errorid="6">
				<argument id="1">{appName}</argument>
			</credentials>
		</validation>
		<performance>
			<dynamicSqlExecute query="DropTable">
				<argument id="1">{appName}_{tableName}</argument>
			</dynamicSqlExecute>
			<sqlExecute query="DeleteAppPermissionsByTableName">
				<argument id="1">{appName}_{tableName}</argument>
			</sqlExecute>
			<sqlExecute query="DeleteTable">
				<argument id="1">{appName}_{tableName}</argument>
			</sqlExecute>
		</performance>
	</request>
</talnet>