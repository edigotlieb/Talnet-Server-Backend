<talnet type="request">
	<request type="APP" name="GET_RECENT_FAILURES">
		<description>
			Returns the recent failures of an app
		</description>
		<requestArguments>
			<requestArgument type="String" name="appName" key="appName" defvalue="{creds:appname}">the application name to examine</requestArgument>
			<requestArgument type="Integer" name="from" key="start" defvalue="0">the index number of the first record</requestArgument>
			<requestArgument type="Integer" name="to" key="index">the index number of the last record</requestArgument>
		</requestArguments>
		<validation>
			<credentials type="isMasterApplication" errorid="13">
			</credentials>
			<credentials type="AppAdmin" errorid="6">
				<argument id="1">{appName}</argument>
			</credentials>
		</validation>
		<performance>
			<sqlExecute query="GetFailures" return="return">
				<argument id="1">{appName}</argument>
				<argument id="2">{from}</argument>
				<argument id="3">{to}</argument>
			</sqlExecute>
		</performance>
	</request>
</talnet>