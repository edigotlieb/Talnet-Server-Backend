<talnet type="request">
	<request type="USER" name="SELECT">
		<description>
			DTD Select
		</description>
		<requestArguments>
			<requestArgument type="String" name="tableName" key="from"></requestArgument>
			<requestArgument type="Statement" name="where" key="WHERE"></requestArgument>
			<requestArgument type="String" name="orderBy" key="orderBy" defvalue=""></requestArgument>
			<requestArgument type="OrderOrientation" name="orie" key="dir" defvalue="ASC"></requestArgument>
		</requestArguments>
		<validation>
			<string target="{creds:appname}_{tableName}" type="isAlphaNumeric" errorid="15">
			</string>
			<existence type="TableByName" errorid="12">
				<argument id="1">{creds:appname}_{tableName}</argument>
			</existence>
			<permission type="TablePermissionUser" errorid="6">
				<argument id="1">{creds:appname}_{tableName}</argument>
				<argument id="2">{creds:username}</argument>
				<argument id="3">{permissionType}</argument>
			</permission>
			<statement target="{where}" type="validateOperands" errorid="19">
			</statement>
		</validation>
		<performance>
			<dynamicSqlExecute query="select">
				<argument id="1">{tableName}</argument>
				<argument id="2">{where}</argument>
				<argument id="3">{orderBy}</argument>
				<argument id="4">{orie}</argument>
			</dynamicSqlExecute>
		</performance>
	</request>
</talnet>