<talnet type="request">
	<request type="DTD" name="UPDATE">
		<description>
			DTD Update
		</description>
		<requestArguments>
			<requestArgument type="String" name="tableName" key="into"></requestArgument>
			<requestArgument type="Statement" name="where" key="WHERE"></requestArgument>
			<requestArgument type="Map" name="data" key="data"></requestArgument>
			<requestArgument type="String" name="appName" key="appName" defvalue="{creds:appname}"></requestArgument>
		</requestArguments>
		<validation>
			<string target="{creds:appname}_{tableName}" type="isAlphaNumeric" errorid="15">
			</string>
			<map target="{data}" type="areKeysAlphaNumeric" errorid="15">
			</map>
			<existence type="TableByName" errorid="12">
				<argument id="1">{creds:appname}_{tableName}</argument>
			</existence>
			<permission type="TablePermissionUser" errorid="6">
				<argument id="1">{creds:appname}_{tableName}</argument>
				<argument id="2">{creds:username}</argument>
				<argument id="3">UPDATE</argument>
				<argument id="4">{appName}</argument>
			</permission>
		</validation>
		<performance>
			<dynamicSqlExecute query="update" return="return">
				<argument id="1">{creds:appname}_{tableName}</argument>
				<argument id="2">{data}</argument>
				<argument id="3">{where}</argument>
			</dynamicSqlExecute>
		</performance>
	</request>
</talnet>